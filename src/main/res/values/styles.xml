<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/CornflowerBlue</item>
        <item name="colorPrimaryDark">@color/SkyBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom application theme. -->
    <style name="CustomAppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/CornflowerBlue</item>
        <item name="colorPrimaryDark">@color/SkyBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Action Bar is Outdated and one should prefer toolbar to access latest app bar features -->

    <!-- Custom application theme for Toolbar. -->
    <!-- Remove the action bar for applying custom toolbar . -->
    <style name="CustomAppThemeToolbar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/CornflowerBlue</item>
        <item name="colorPrimaryDark">@color/SkyBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
